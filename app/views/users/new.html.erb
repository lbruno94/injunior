<% provide(:title, 'Cadastre-se') %>
<h1>Cadastre-se</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :nome %>
      <%= f.text_field :nome %>

      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :Matricula %>
      <%= f.number_field :matricula %>

      <%= f.label :senha %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Criar minha conta", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>